<docbook>
    <output format="html"/>
<!--    <output format="pdf"/>-->
<!--    <output format="epub2"/>-->
    <document name="calendar" dataGeneratorClass="org.opentorah.calendar.paper.Tables">
      <output format="html"/>
      <output format="htmlOneDirect-mathJax"/>
      <math mathJaxEnabled="true"/>
    </document>
    <document name="dream"/>
    <document name="typesetting"/>
    <common name="all">
      <parameter name="part.autolabel" value="0"/>                       <!-- was only in calendar paper -->
      <parameter name="chapter.autolabel" value="0"/>                    <!-- was only in calendar paper -->
      <parameter name="section.autolabel.max.depth" value="6"/>          <!-- was only in non-calendar papers -->
<!--      <parameter name="punct.honorific" value=""/> // Remove trailing period after honorific-->
    </common>
    <common name="html">
<!--        // Include page number in cross-references-->
      <parameter name="insert.xref.page.number" value="yes"/>          <!-- was only in non-calendar papers -->
    </common>
    <format name="pdf">
      <parameter name="title.font.family" value="DejaVu Sans"/>
      <parameter name="body.font.family" value="DejaVu Sans"/>
      <parameter name="sans.font.family" value="DejaVu Sans"/>
      <parameter name="symbol.font.family" value="DejaVu Sans"/>
      <parameter name="monospace.font.family" value="DejaVu Sans Mono"/>
      <parameter name="body.font.master" value="12"/>
      <parameter name="footnote.font.size" value="10"/>                  <!-- was only in non-calendar papers -->
<!--        // Suppress content indent-->
      <parameter name="body.start.indent" value="0pt"/>                  <!-- was only in non-calendar papers -->
<!--        // Some space for the list labels-->
      <parameter name="orderedlist.label.width" value="2em"/>            <!-- was only in non-calendar papers -->
    </format>
    <format name="htmlOneDirect">
      <variant name="mathJax">
        <math useMathJaxV3="true"/>
      </variant>
    </format>
</docbook>
